{
  "name": "dotnet-9-mysql",
  "image": "mcr.microsoft.com/dotnet/sdk:9.0-bookworm-slim",
  "features": {
    "ghcr.io/devcontainers/features/mysql-server:1": {
      "version": "8.0",
      "mysqlDatabase": "appdb",
      "mysqlUser": "appuser",
      "mysqlPassword": "apppass",
      "mysqlRootPassword": "123456"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit"
      ]
    }
  },
  "postStartCommand": "dotnet --version && dotnet tool restore && dotnet restore && dotnet tool install --global dotnet-ef"
}
